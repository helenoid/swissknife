    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^15.11.7",
    "playwright": "^1.49.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}