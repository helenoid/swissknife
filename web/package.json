{
  "name": "swissknife-web",
  "version": "1.0.0",
  "description": "SwissKnife Web Desktop - Browser compilation of SwissKnife",
  "scripts": {
    "build": "webpack --config webpack.config.js --mode=production",
    "build:dev": "webpack --config webpack.config.js --mode=development",
    "dev": "webpack serve --config webpack.config.js --mode=development",
    "dev:alt": "npm run build:dev && npm run serve:dev",
    "serve": "npx http-server dist -p 8000 -c-1 --cors -o --no-cache",
    "serve:fresh": "npm run clean && npm run build && npm run serve",
    "serve:dev": "npm run build:dev && npm run serve",
    "serve:prod": "npm run build && npm run serve",
    "clean": "rm -rf dist",
    "test:build": "npm run build:dev && npm run serve",
    "watch": "npm run build:dev -- --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.55.0",
    "@strudel/core": "^1.2.2",
    "@strudel/mini": "^1.2.2",
    "@strudel/soundfonts": "^1.2.3",
    "@strudel/webaudio": "^1.2.3",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "nanoid": "^5.1.5",
    "openai": "^5.8.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  }
}
